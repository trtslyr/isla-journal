{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["ES2020"],
    "module": "CommonJS",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "outDir": "dist/main",
    "rootDir": "src/main",
    "allowJs": true,
    "checkJs": false,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "strict": false,
    "forceConsistentCasingInFileNames": false
  },
  "include": ["src/main/**/*"],
  "exclude": [
    "src/main/**/*.test.ts", 
    "src/main/**/*.spec.ts"
  ]
} 